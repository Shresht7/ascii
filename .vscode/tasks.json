    "version": "2.0.0",
    "tasks": [
        {
            "label": "ðŸ“¦ Build",
            "dependsOn": [
                "Compile",
                "Link"
            ]
        },
        {
            "label": "Compile",
            "type": "shell",
            "command": "nasm",
            "args": [
                "-f",
                "elf64",
                "${workspaceFolder}/src/ascii.asm",
                "-o",
                "${workspaceFolder}/obj/ascii.o"
            ],
        },
        {
            "label": "Link",
            "type": "shell",
            "command": "ld",
            "args": [
                "${workspaceFolder}/obj/ascii.o",
                "-o",
                "${workspaceFolder}/out/ascii"
            ],
            "dependsOn": [
                "Compile"
            ]
        }
    ]
}
